@page "/patient"
@using FhirBlaze.SharedComponents
@using Hl7.Fhir.Model

<nav class="navbar navbar-light bg-light">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <button @onclick="ToggleSearch" class="btn btn-primary">@(ShowSearch ? "Cancel" : "Search Patient")</button>
        </li>
        <li class="nav-item">
            <button @onclick="ToggleComparison" class="btn btn-secondary">@(ShowComparison ? "Cancel" : "Compare Patients")</button>
        </li>
    </ul>
</nav>

@if (ShowComparison)
{
    <PatientCompare Patients="SelectedPatients" />
}
else
{
    @if (ShowSearch)
    {
        @*<PatientSearch Patient="DraftPatient" Processing="@ProcessingSearch" SearchPatient="SearchPatient" />*@
    }

    <div class="container">
        <br />
        @if (!Loading)
        {
            <div class="container">

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th><input type="checkbox" @onchange="@(e => SelectAll(e.Value))" /></th>
                            <th>Id</th>
                            <th>FHIR Name</th>
                            <th>Dataverse Name</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Patients)
                        {
                            <tr>
                                <td><input type="checkbox" checked="@patient.IsSelected" @onchange="@(e => PatientSelected(e.Value, patient))" /></td>
                                <td>@patient.Id</td>
                                <td>@patient.Item1?.FirstName @patient.Item1?.LastName</td>
                                <td>@patient.Item2?.FirstName @patient.Item2?.LastName</td>
                                <td>
                                    <div class="button-group">
                                        @*<button @onclick="@(e => PatientSelected(e, patient))" class="btn btn-primary"><span class="oi oi-code"></span></button>*@
                                        <button @onclick="@(e => NavigateToPatientDetail(e, patient.Id))" class="btn btn-primary"><span class="oi oi-magnifying-glass"></span></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <br />
            <h3>Found: @Patients.Count patients!</h3>
        }
        else
        {
            <LoadingSpinner />
        }

    </div>
}