@page "/patient-dashboard"
@using FhirBlaze.PatientModule.Components
@using FhirBlaze.SharedComponents
@using Hl7.Fhir.Model

<h2>
    Patient Dashboard Sync
</h2>

@if (Loading)
{
    <LoadingSpinner />
}
else
{
    <div class="container">
        <div class="row">
            <div class="card text-center">
                <div class="card-header bg-dark text-white ">
                    <label>All Records</label> @*todo: make links to specialized searches*@
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-primary">@TotalRecordCount</a>
                </div>
            </div>&nbsp;
            <div class="card text-center">
                <div class="card-header bg-dark text-white ">
                    <label>Orphan FHIR Records</label>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-primary">@FhirOrphanCount</a>
                </div>
            </div>&nbsp;
            <div class="card text-center">
                <div class="card-header bg-dark text-white ">
                    <label>Orphan Dataverse Records</label>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-primary">@DataverseOrphanCount</a>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <form class="form">
                <div class="form-group row">
                    <label for="id" class="col-sm-8 col-form-label">FHIR ID:</label>
                    <div class="col-sm-8">
                        <input name="id" typeof="text" @bind="FilterId" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="firstName" class="col-sm-8 col-form-label">First Name:</label>
                    <div class="col-sm-8">
                        <input name="firstName" typeof="text" @bind="FilterFirstName" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="lastName" class="col-sm-8 col-form-label">Last Name:</label>
                    <div class="col-sm-8">
                        <input name="lastName" typeof="text" @bind="FilterLastName" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-8">
                        <label class="col-sm-8 col-form-label">Last modified on or after:</label>
                        <DateChooser Value="FilterStartDate" ValueChanged="@(e => StartFilterDateChanged(e))" />
                    </div>
                    <div class="col-sm-8">
                        <label class="col-sm-8 col-form-label">Last modified on or before:</label>
                        <DateChooser Value="FilterEndDate" ValueChanged="@(e => EndFilterDateChanged(e))" />
                    </div>
                </div>

                <div class="form-group row">
                    <button type="submit" @onclick="Search" class="btn btn-primary">Search</button>
                    <div class="col-sm-6">
                        <button type="reset" @onclick="ClearFilters" class="btn btn-secondary">Clear</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}